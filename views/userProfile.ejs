<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %> 
    <title>User Profile</title>
</head>
<body>
    <h1><%= user.displayName %></h1>
    <a href="./<%= user._id %>/edit">Edit Profile</a>
    <a href="/">Home</a>
    <a href="/blog/<%= user._id %>/new"><button>New Blog Post</button></a>

    <form action="./<%= user._id %>/?_method=DELETE" method="POST">
        <button type="submit">Delete Profile?</button>
    </form>
    <% user.posts.sort((a, b) => (b.updatedAt - a.updatedAt)) %>
    <% for (let i = 0; i < user.posts.length; i++) { %>
        <article>
            <h3><a href="/blog/<%= user.posts[i]._id %>"><%= user.posts[i].title %></a></h3>
            <p><%= user.posts[i].body %></p>
            <img src="<%= user.posts[i].images[0] %>" alt="<%= user.posts[i].captions[0] %>" srcset="">
            <img src="<%= user.posts[i].images[1] %>" alt="<%= user.posts[i].captions[1] %>" srcset="">
            <img src="<%= user.posts[i].images[2] %>" alt="<%= user.posts[i].captions[2] %>" srcset="">
            <h6>Post Last Edited At: <%= user.posts[i].updatedAt %></h6>
            <a href="/blog/<%= user.posts[i].id %>/edit"><button>Edit Post</button></a>
            <form action="../blog/<%= user.posts[i]._id %>/?_method=DELETE" method="POST">
                <button type="submit">Delete Post?</button>
            </form>
        </article>
    <% } %>
</body>
</html>