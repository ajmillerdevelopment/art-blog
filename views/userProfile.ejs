<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %> 
    <title>User Profile</title>
</head>
<body>
    <p><%= user.displayName %></p>
    <p>Username: <%= user.username %></p>
    <a href="./<%= user._id %>/edit">Edit Profile</a>
    <a href="/">Home</a>
    <ul>
    <% user.posts.forEach((post) => { %> 
        <li><%= post.title %></li>
        <p><%= post.body %></p>
    <% }) %> 
    </ul>
    <a href="/blog/<%= user._id %>/new"><button>New Blog Post</button></a>

    <form action="./<%= user._id %>/?_method=DELETE" method="POST">
        <button type="submit">Delete Profile?</button>
    </form>

    <% for (let i = 0; i < posts.length; i++) { %>
        <article>
            <h3><%= posts[i].title %></h3>
            <p><%= posts[i].body %></p>
            <h6>Post Last Edited At: <%= posts[i].updatedAt %></h6>
        </article>
    <% } %>
</body>
</html>